modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "weekly-reporter"

[[workflows.workflow]]
name = "weekly-reporter"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DEV_MODE=1 && python src/weekly_reporter.py"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "vm"
run = ["python", "src/weekly_reporter.py"]
