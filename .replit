modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[agent]
expertMode = true
integrations = ["google-sheet:1.0.0", "google-drive:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "weekly-reporter"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dashboard-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "xml-import-scheduler"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "shipstation-units-refresh"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "shipstation-status-sync"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "orders-cleanup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "manual-order-sync"

[[workflows.workflow]]
name = "weekly-reporter"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DEV_MODE=1 && python src/weekly_reporter.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "dashboard-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "xml-import-scheduler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/scheduled_xml_import.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "shipstation-units-refresh"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/shipstation_units_refresher.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "shipstation-status-sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/scheduled_status_sync.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "orders-cleanup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/scheduled_cleanup.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "manual-order-sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/scheduled_manual_sync.py"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "vm"
run = ["python", "src/weekly_reporter.py"]

[[ports]]
localPort = 5000
externalPort = 80

