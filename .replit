modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[agent]
expertMode = true
integrations = ["google-sheet:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "weekly-reporter"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dashboard-server"

[[workflows.workflow]]
name = "weekly-reporter"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DEV_MODE=1 && python src/weekly_reporter.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "dashboard-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "vm"
run = ["python", "src/weekly_reporter.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33971
externalPort = 3002

[[ports]]
localPort = 37413
externalPort = 3001
