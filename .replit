modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[agent]
expertMode = true
integrations = ["google-sheet:1.0.0", "google-drive:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dashboard-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "orders-cleanup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "xml-import"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "shipstation-upload"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "status-sync"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "manual-order-sync"

[[workflows.workflow]]
name = "dashboard-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "orders-cleanup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python src/scheduled_cleanup.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "xml-import"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "while true; do python src/scheduled_xml_import.py; sleep 300; done"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "shipstation-upload"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 60; while true; do python src/scheduled_shipstation_upload.py; sleep 300; done"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "status-sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 120; while true; do python src/shipstation_status_sync.py; sleep 300; done"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "manual-order-sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 180; while true; do python src/manual_shipstation_sync.py; sleep 300; done"

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "vm"
run = ["bash", "start_all.sh"]

